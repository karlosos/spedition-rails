startClientSelect = (object) ->
  object.select2
    theme: 'bootstrap'
    ajax:
      url: '/clients.json'
      dataType: 'json'
      processResults: (data) ->
        return {
        results: $.map(data, (client, i) ->
          {
            id: client.id
            text: client.client_info
          }
        )}
    language:
      noResults: ->
        return "<a type=\"button\" class=\"btn btn-info\" onclick='show_client_modal_transport_order()'>Stwórz klienta</a>"
    escapeMarkup: (markup) ->
      return markup;

