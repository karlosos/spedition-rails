<div class="btn-group unloading-status" transport-order-id="<%= transport_order.id %>" transport-order-email="<%= transport_order.client_email %>">
  <% button_status_class = "btn-status-#{transport_order.unloading_status}" %>
  <button type="button" class="btn <%= button_status_class %> status dropdown-toggle" data-toggle="dropdown">
    <span class="glyphicon glyphicon-envelope"></span>
  </button>
  <ul class="dropdown-menu" role="menu" transport-order-id="<%= transport_order.id %>">
    <li>
      <a class="unloading_option" href="#" value="false">Niewysłano info o rozładunku</a>
    </li>
    <li>
      <a class="unloading_option" href="#" value="true">Wysłano info o rozładunku</a>
    </li>
    <li>
      <%= link_to "Wyślij info o rozładunku", unloading_transport_order_email_path(:id => transport_order.id) %>
    </li>
  </ul>
</div>
