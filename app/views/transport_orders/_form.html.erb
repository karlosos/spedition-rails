<%= simple_form_for(@transport_order) do |f| %>
  <% if @transport_order.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@transport_order.errors.count, "error") %>
      prohibited this transport_order from being saved:</h2>

    <ul>
      <% @transport_order.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-inputs">
    <%= label_tag :transport_order_name, "Numer zlecenia" %>
    <%= f.fields_for :transport_order_name do |transport_order_name_form| %>
      <% render :partial => 'transport_order_name_form', :locals => {:f => transport_order_name_form} %>
    <% end %>

    <p>
      <%= f.label :client %><br />
      <%= f.collection_select :client_id, Client.all, 'id', 'name', prompt: 'Wybierz klienta' %>
    </p>

    <p>
      <%= f.label :carrier %><br />
      <%= f.collection_select :carrier_id, Carrier.all, 'id', 'registration_number', prompt: 'Wybierz klienta' %>
    </p>

    <p>
      <%= f.label :route, "Trasa" %><br />
      <%= f.text_field :route %>
    </p>

    <p>
      <%= f.label :distance, "Dystans" %><br />
      <%= f.number_field :distance %>
    </p>

    <p>
      <%= f.label :freight_rate, "Wartość frachtu" %><br />
      <%= f.number_field :freight_rate %>
    </p>

    <p>
      <%= f.label :loading_country %><br />
      <%= f.text_field :loading_country %>
    </p>

    <p>
      <%= f.label :loading_zip %><br />
      <%= f.text_field :loading_zip %>
    </p>

    <p>
      <%= f.label :loading_city %><br />
      <%= f.text_field :loading_city %>
    </p>

    <p>
      <%= label_tag :loading_date, "Data wystawienia faktury" %>
      <div class='input-group date' id='datetimepicker1' data-date-format="yyyy-mm-dd" locale="pl">
        <%= f.text_field :loading_date, { class: "form-control", value: Date.today, :readonly => true } %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </p>

    <p>
      <%= f.label :unloading_country %><br />
      <%= f.text_field :unloading_country %>
    </p>

    <p>
      <%= f.label :unloading_zip %><br />
      <%= f.text_field :unloading_zip %>
    </p>

    <p>
      <%= f.label :unloading_city %><br />
      <%= f.text_field :unloading_city %>
    </p>

    <p>
      <%= label_tag :unloading_date, "Data wystawienia faktury" %>
      <div class='input-group date' id='datetimepicker2' data-date-format="yyyy-mm-dd" locale="pl">
        <%= f.text_field :unloading_date, { class: "form-control", value: Date.today, :readonly => true } %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </p>


    <div class="actions">
      <%= f.submit %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
