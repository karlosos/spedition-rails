<p id="notice"><%= notice %></p>

<h3> Numer </h3>
<%= @invoice.invoice_name.get_name %>

<h3> Data </h3>
<%= @invoice.date %>

<h3> Klient </h3>
<%= @invoice.client.name %> <br>
<%= @invoice.client.address.line1 %> <br>
<%= @invoice.client.address.city %> <br>
<%= @invoice.client.address.country %> <br>

<h3> Usługi </h3>
<% @invoice.invoice_items.each do |invoice_item| %>
  <h4><%= invoice_item.item.name %></h4>
  Sztuk: <%= invoice_item.quantity %> <br>
  jm: <%= invoice_item.item.unit %> <br>
  Cena za jm: <%= humanized_money_with_symbol invoice_item.unit_price %> <br>
  Wartość netto: <%= humanized_money_with_symbol invoice_item.net_price %>
  Wartość vat: <%= humanized_money_with_symbol invoice_item.value_added_tax %>
  Wartosć: <%= humanized_money_with_symbol invoice_item.total_selling_price %>
<% end %>

<h3> Wartość </h3>
Wartość netto: <%= humanized_money_with_symbol @invoice.net_price %>
Wartość vat: <%= humanized_money_with_symbol @invoice.value_added_tax %>
Wartosć: <%= humanized_money_with_symbol @invoice.total_selling_price %>
<br>
<%= link_to 'Edit', edit_invoice_path(@invoice) %> |
<%= link_to 'Back', invoices_path %>
