<h1>Listing items</h1>

<table class="table">
  <thead>
    <tr>
      <td><%= sortable "name", "Nazwa"%></td>
      <td><%= sortable "unit_price_cents", "Cena netto"%></td>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item %></td>
        <td><%= "#{humanized_money_with_symbol item.unit_price}/#{item.unit}" %></td>
        <td>
          <div class="btn-group invoice-status" >
            <button type="button" class="btn btn-secondary" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span></button>
            <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Show', item %></li>
              <li><%= link_to 'Edit', edit_item_path(item) %></li>
              <li><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @items %>
<br>

<%= link_to 'New Item', new_item_path %>
